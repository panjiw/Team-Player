<div class="container">
    <div class="header-row">
        <div class= "bills-header">
            <h1>My Bills</h1>
        </div>
    </div>
    <div class="bills-addbutton">
            <a class="btn btn-default" id="openBtn" ng-click="closePop()">Add Bill</a>

                <div id="myModal" class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">Ã—</button>
                      <h3>Create Bill</h3>
                  </div>
                  <div class="modal-body tasks-add-body">
                        <div class="col-md-6">
                        <h5>Name:</h5><input type="text" ng-model="newBillTitle" />
                            <h5>Description:</h5>
                              <textarea cols="30" rows="4" ng-model="newBillDescription"></textarea>
                            <h5>Total Cost:</h5><input type="text" ng-model="newBillTotal"/>
                            <h5>Due Date:</h5><input type="date" ng-model="newBillDateDue"
                            min="2013-01-01" max="2113-01-01"/>
                        </div>
                        <div class="col-md-5">
                            <h5>Group</h5>
                            <select ng-model="newBillGroup" ng-options="grp.name for (id, grp) in groupsList">
                                <option value="">-- choose group --</option>
                            </select>
                            <br>
                            <div class="bill-members">
                                <div ng-repeat="mem in currentMembers | filter:notSelf" style="height:2.2em;">
                                  <input type="checkbox" ng-model="mem.chked" style="float:left;" 
                                   ng-click="mem.amount = 0;"/>
                                  <span style="float:left;">{{mem.username}}</span>
                                  <input ng-show="mem.chked==true" ng-model="mem.amount" type="number" 
                                   min="0.01" step="0.01" max="5000000" style="float:right;"/>
                                   <div style="clear: both;"></div>
                                </div>
                                <!-- <select multiple ng-model="newBillMembers" style="width: 10em;" 
                                 ng-options="mem.username for mem in currentMembers"></select> -->
                                <input type="checkbox" class="large" data-label="Split Evenly"/>
                                <span>Split Evenly</span>
                            </div>
                        </div>
                  </div>
                  <div class="modal-footer">
                    <button class="btn" data-dismiss="modal">Cancel</button>
                        <button class="btn" data-dismiss="modal" ng-click="createBill()">Save</button>
                  </div>
                  </div>
                </div>
                </div>
    </div>
