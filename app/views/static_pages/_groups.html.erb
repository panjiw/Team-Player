  <div class="container">
          <div class="header-row">
          <div class= "tasks-header">
            <div class="col-md-11">
              <h1>My Groups</h1>
            </div>
            <div class="col-md-1">
              <button class="btn btn-default" ng-click="openGroupHelpModal($event)">
                <span class="glyphicon glyphicon-info-sign"></span>
              </button>
                <div id="groupHelpModal" class="modal fade" tabindex="-1" role="dialog">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">×</button>
                          <h3>Help Guide</h3>
                      </div>
                    <div class="modal-body help-body">
                      <div class="instruction-row">
                        <div id="groupHelp1">
                          <h4>Adding A Group</h4>
                            <div class="info">
                              Click on "Add Group" and simply input a name and description for your group.
                              You'll be able to add members by email. Note: members won't display until they have created an account.
                            </div>
                            <hr>
                            <div class="helpImage"><%= image_tag "groups-page1.png" %></div>
                            <hr>
                            <div class="backNext">
                              <div class="col-md-10"></div>
                              <div class="col-md-2">
                                <button ng-click="groupNext(1)" class="btn btn-default">Next</button>
                              </div>
                            </div>
                        </div>
                        <div style="display:none" id="groupHelp2">
                          <h4>Adding a Member to an Existing Group</h4>
                            <div class="info">
                              Click on the existing group - it will turn blue. <br> Then enter the new member's email address and click "Add Member".
                            </div>
                            <hr>
                            <div class="helpImage"><%= image_tag "groups-page2.png" %></div>
                            <hr>
                            <div class="backNext">
                              <div class="col-md-2">
                                <button ng-click="groupBack(2)" class="btn btn-default">Back</button>
                              </div>
                              <div class="col-md-8"></div>
                              <div class="col-md-2">
                                <button ng-click="groupNext(2)" class="btn btn-default">Next</button>
                              </div>
                            </div>
                        </div>
                        <div style="display:none" id="groupHelp3">
                          <h4>Editing A Group</h4>
                            <div class="info">
                              You must be the creator of the group to be able to edit it. Select the group and click the edit button next to the group's name. 
                            </div>
                            <hr>
                            <div class="helpImage"><%= image_tag "groups-page3.png" %></div>
                            <hr>
                            <div class="backNext">
                              <div class="col-md-2">
                                <button ng-click="groupBack(3)" class="btn btn-default">Back</button>
                              </div>
                              <div class="col-md-8"></div>
                              <div class="col-md-2">
                                <button ng-click="groupNext(3)" class="btn btn-default">Next</button>
                              </div>
                            </div>
                        </div>
                        <div style="display:none"  id="groupHelp4">
                          <h3>Leaving A Group</h3>
                            <div class="info">
                              Simply click "Leave Group" to disconnect from group. All tasks and bills related to this group will be gone. 
                            </div>
                            <hr>
                            <div class="helpImage"><%= image_tag "groups-page4.png" %></div>
                            <hr>
                            <div class="backNext">
                              <div class="col-md-2">
                                <button ng-click="groupBack(4)" class="btn btn-default">Back</button>
                              </div>
                              <div class="col-md-10"></div>
                            </div>
                        </div>
                      </div>
                    </div>
                    </div>
                  </div>
                </div>
            </div>
          </div>
      </div>


          <div class="group-body">
              <div class="col-md-5">
                  <div class="groups">
                    <div class="groups-listtitle">
                      <button type="button" ng-click="showAddGroup()" class="btn btn-default group-add">Add Group</button>
                        <h3>Groups</h3>
                    </div>            
                      <div class="group-scroll">
                        <div class="list-group">
                            <!-- $parent is required because ng-repeat creates a new scope -->
                            <a ng-repeat="grp in groupsList | orderGroups"
                               class="list-group-item" ng-class="{grp_active :$parent.group_selected == grp.id}"
                               ng-click="$parent.selectGroup(grp.id)">
                              <h4>{{grp.name}}</h4>
                            </a>
                        </div>
                      </div>
                  </div>
              </div>
              <div class="col-md-7">
                  <div class="group-display">
                    <div class="group-titlerow">
                      <div class="group-leavebutton" ng-hide="groupsList[group_selected].isSelfGroup">
                        <button ng-click="leaveGroup(groupsList[group_selected].id)" type="button" class="btn btn-default">Leave Group</button>
                      </div>
                      <div class="group-name">
                        <h3>
                          <button type="button" ng-hide="groupsList[group_selected].isSelfGroup" ng-click="showEditGroup($event)" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-pencil"></span>
                          </button>
                          <span>{{groupsList[group_selected].name}}<span>
                        </h3>
                      </div>
                    </div>  
                      <div class="group-members">
                        <div class="group-members-scroll">
                          <a class="list-group-item" ng-class="{mem_active :$parent.member_selected == mem.id}"
                               ng-repeat="mem in currentMembers | orderUsers"
                               ng-click="$parent.member_selected=mem.id">
                              <h4>{{mem.firstname}}</h4>
                            </a>
                        </div>
                          <div ng-hide="groupsList[group_selected].isSelfGroup">
                            <input type="text" ng-model="addNewMember" ng-keypress="addMember($event)" class="form-control group-add" placeholder="new member email" />
                            <button type="button" ng-click="addMember($event)" class="btn btn-default group-add">Add Member</button>
                          </div>
                      </div>
                      <div class="group-description" ng-show="member_selected == -1">
                        <h4>{{groupsList[group_selected].description}}</h4>
                      </div>
                      <div class="group-description" ng-hide="member_selected == -1">
                        <h4>Username: {{currentMembers[member_selected].username}}</h4>
                        <h4>Full Name: {{currentMembers[member_selected].firstname + " " + currentMembers[member_selected].lastname}}</h4>
                      </div>
                  </div>
              </div>
  <!--             <button type="button" ng-click="showAddGroup()" class="btn btn-default group-add">Add Group</button> -->
              <!-- 
              <input type="text" ng-model="lookupEmail" />
              <button type="button" class="btn btn-default" ng-click="check($event)">Lookup</button>
              <div style="display: {{user.id ? '' : 'none'}}">{{"Hey, that's: " + user.fname + " " + user.lname}}</div> -->
          </div>
      </div>

      <!-- Popup for adding group -->

      <div id="groupModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog">
       <div class="modal-content">
       <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">×</button>
       <h3>Add Group</h3>
       </div>
       <div class="modal-body group-add-body">
          <div class="col-md-6">
            <h5>Name:</h5><input ng-model="groupCreateName" type="text" />
            <h5>Description:</h5><textarea ng-model="groupCreateDescription"></textarea>
          </div>
          
          <div class="col-md-5">
              <h5>Members:</h5>
              <div id="groupMembers">
                <div ng-repeat="mem in newMemberList | orderUsers">{{mem.firstname + " " + mem.lastname + " (" + mem.username + ")"}}</div>
              </div>
              <input class="form-control" ng-model="newMember" ng-keypress="checkByEmail($event)" type="text" placeholder="add member by email" />
              <button ng-click="checkByEmail($event)" type="button" class="btn btn-default group-add">Add Member</button>
          </div>
       </div>
       <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Cancel</button>
        <button class="btn" ng-click="createGroup($event)">Save</button>
       </div>
       </div>
      </div>
      </div>

      <!-- popup end -->

      <!-- Popup for editing group -->

      <div id="editModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog">
       <div class="modal-content">
       <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">×</button>
       <h3>Add Group</h3>
       </div>
       <div class="modal-body group-add-body">
          <div class="col-md-6">
            <h5>Name:</h5><input ng-model="editName" type="text" />
            <h5>Description:</h5><textarea ng-model="editDescription"></textarea>
          </div>
       </div>
       <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Cancel</button>
        <button class="btn" ng-click="editGroup($event)">Save</button>
       </div>
       </div>
      </div>
      </div>

      <!-- popup end -->
   </div>
