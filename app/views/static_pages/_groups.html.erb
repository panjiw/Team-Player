<div class="container">
        <div class="header-row">
            <div class= "groups-header">
                <h1>My Groups</h1>
            </div>
        </div>

        <div class="group-body">
            <div class="col-md-5">
                <div class="groups">
                  <div class="groups-listtitle">
                    <button type="button" ng-click="showAddGroup()" class="btn btn-default group-add">Add Group</button>
                      <h3>Groups</h3>
                  </div>            
                    <div class="group-scroll">
                      <div class="list-group">
                          <!-- $parent is required because ng-repeat creates a new scope -->
                          <a class="list-group-item"
                             ng-repeat="grp in groupsList"
                             ng-click="$parent.selectGroup(grp.id)">
                            <h4>{{grp.name}}</h4>
                          </a>
                      </div>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <div class="group-display">
                  <div class="group-titlerow">
                    <div class="group-leavebutton">
                      <button type="button" class="btn btn-default">Leave Group</button>
                    </div>
                    <div class="group-name">
                      <h3>{{groupsList[group_selected].name}}</h3>
                    </div>
                  </div>  
                    <div class="group-members">
                        <a class="list-group-item"
                             ng-repeat="mem in currentMemebrs"
                             ng-click="$parent.member_selected=mem.id">
                            <h4>{{mem.firstname}}</h4>
                          </a>
                        <button type="button" class="btn btn-default group-add">Add Member</button>
                    </div>
                    <div class="group-description" ng-show="member_selected == -1">
                      <h4>{{groupsList[group_selected].description}}</h4>
                    </div>
                    <div class="group-description" ng-hide="member_selected == -1">
                      <h4>Username: {{currentMemebrs[member_selected].username}}</h4>
                      <h4>Full Name: {{currentMemebrs[member_selected].firstname}} {{currentMemebrs[member_selected].lastname}}</h4>
                    </div>
                </div>
            </div>
<!--             <button type="button" ng-click="showAddGroup()" class="btn btn-default group-add">Add Group</button> -->
            <!-- 
            <input type="text" ng-model="lookupEmail" />
            <button type="button" class="btn btn-default" ng-click="check($event)">Lookup</button>
            <div style="display: {{user.id ? '' : 'none'}}">{{"Hey, that's: " + user.fname + " " + user.lname}}</div> -->
        </div>
    </div>

    <!-- Popup for adding group -->

    <div id="myModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
     <div class="modal-header">
     <button type="button" class="close" data-dismiss="modal">Ã—</button>
     <h3>Add Group</h3>
     </div>
     <div class="modal-body group-add-body">
        <div class="col-md-6">
          <h5>Name:</h5><input ng-model="groupCreateName" type="text" />
          <h5>Description:</h5><textarea ng-model="groupCreateDescription"></textarea>
        </div>
        
        <div class="col-md-5">
            <h5>Members:</h5>
            <div id="groupMembers">
              <div ng-repeat="mem in newMemberList">{{mem.fname + " " + mem.lname}}</div>
            </div>
            <input ng-model="newMember" ng-keypress="checkByEmail($event)" type="text" placeholder="add member by email" />
        </div>
     </div>
     <div class="modal-footer">
      <button class="btn" data-dismiss="modal">Cancel</button>
      <button class="btn" data-dismiss="modal" ng-click="createGroup($event)">Save</button>
     </div>
     </div>
    </div>
    </div>

    <!-- popup end -->
 </div>
