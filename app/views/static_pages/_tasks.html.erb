<div class="container">
      <div class="header-row">
          <div class= "tasks-header">
            <h1>My Tasks</h1>
          </div>
      </div>
<!--   *** Add Task Button    ***-->
          <div class="tasks-addbutton">
            <a class="btn btn-default" id="openBtn" ng-click="openModal($event)">Add Task</a>
                <div id="myModal" class="modal fade task-modal" tabindex="-1" role="dialog">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">Ã—</button>
                      <h3>Create Task</h3>
                    </div>
                    <div class="modal-body tasks-add-body">
                        <div class="col\
                        '-md-5">
                        <h5>Name:</h5><input type="text" />
                            <h5>Description:</h5>
                              <textarea cols="30" rows="4"></textarea>
                            <h5>Group:</h5><input type="text" />
                            <h5>Members:</h5>
                            <div id="members">
                              <div ng-repeat="member in addTask_members">
                                {{member}}
                              </div>
                            </div>
                            <input type="text" ng-model="newMember" 
                              ng-keypress="addMember($event)" placeholder="member username" />
                        </div>
                        <div class="col-md-6">
                          <div class="tasks-duedate">
                            <input type="checkbox" class="large" data-label="Deadline"/>
                            <span>No Due Date</span>
                            <div class="tasks-calendar">Calendar here</div>
                            <input type="checkbox" class="large" data-label="Cycle"/>
                            <span>Cyclic Task</span><br>
                          </div>
                      </div>
                  </div>
                  <div class="modal-footer">
                    <button class="btn" data-dismiss="modal">Cancel</button>
                        <button class="btn" data-dismiss="modal">Save</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <!--   ***********scrollbox with task content begin ***********  -->
  <div class="tasks-area">
    <div class="tasks-scroll">
      <div style="width:700px;height:400px;line-height:3em;
                      overflow:auto;padding:20px;">
        <div ng-repeat="task in myTasks"> 
          <button ng-click="openTaskPop(task.taskName)" class="btn btn-default tasks-panelbutton" >
            <div class="panel panel-warning">
              <div class="panel-heading">
                <div class="task-panel">
                  <h4 class="panel-descr">{{task.taskName}}</h4>
                  <h4 class="panel-date">{{task.dueDate}}</h4>
                </div>
              </div>
              <div class="panel-body panel-info">
                <div class="panel-groupname">{{task.groupName}}</div>
                <div class="panel-groupmembers">{{task.members}}</div>
              </div>
            </div>
          </button>

          <div id="{{task.taskName}}info" class="tasks-pop">
              <h4 class="panel-descr">{{task.taskName}}</h4>
              <h4 class="panel-date">{{task.dueDate}}</h4>
              <div class="panel-groupname">{{task.groupName}}</div>
              <div class="panel-groupmembers">{{task.members}}</div>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>